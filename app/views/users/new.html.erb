
<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for User.new do |f| %>
      <%= f.label :FirstName %>
      <%= f.text_field :FirstName %>

      <%= f.label :lastname %>
      <%= f.text_field :lastname %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :major %>
      <%= f.text_field :major %>

      <%= f.label :classyear %>
      <%= f.date_select :classyear, {start_year: 1876, end_year: 2024, :discard_day => true, :discard_month => true}%>

      <%= f.label :occupation %>
      <%= f.text_field :occupation %>

      <%= f.label :phonenumber %>
      <%= f.text_field :phonenumber %>

      <%= f.label :city %>
      <%= f.text_field :city %>

      <%= f.label :state %>
      <%= f.text_field :state %>

      <%= f.label :country %>
      <%= f.text_field :country %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>