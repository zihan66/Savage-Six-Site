
%h1 Register New Cadet

= form_tag users_new_path do

  = label :user, :name, 'First Name'
  = text_field :user, 'First'
  
  = label :user, :name, 'Last Name'
  = text_field :user, 'Last'

  = label :user, :year, 'Class Year'
  = date_select :user, :year, :start_year =>1876, :discard_day => true, :discard_month => true

  = label :user, :major, 'Major'
  = text_field :user, :major

  = label :user, :occupation, 'Current Occupation'
  = text_field_tag :user, :occupation

= submit_tag 'Save Changes'